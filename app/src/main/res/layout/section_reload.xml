<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/sectionReload"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="50dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/reloadIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon_pull_down"
            android:tint="@color/white_five" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reloadMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-4dp"
                android:text="Loading data . . ."
                android:textSize="14sp"
                android:textColor="@color/warm_grey_four"
                android:textAllCaps="true" />

            <TextView
                android:id="@+id/refreshMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pull down to refresh"
                android:textSize="10sp"
                android:textColor="@color/white_five"
                android:textAllCaps="true"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>